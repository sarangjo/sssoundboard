{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "one-variable-per-declaration": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "no-namespace": false,
    "max-classes-per-file": false
  },
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts"]
  }
}
